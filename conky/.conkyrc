# integrate with gnome 3:
# https://wiki.archlinux.org/index.php/Conky#Integrate_with_Gnome_3
own_window yes
own_window_transparent yes
own_window_argb_visual yes
own_window_argb_value 200
own_window_type dock # instead of 'conky'
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# prevent flicker
double_buffer yes

# positioning and size
gap_x 1930
gap_y 30
minimum_size 480 400

update_interval 1.0

# font config
#draw_outline no
#draw_borders no
use_xft yes
xftfont UbuntuMono:size=9

# increase text buffer to allow for long TAFs
text_buffer_size 300

TEXT
$nodename // $kernel // up $uptime // load $loadavg

C P U ${hr 1}
${cpugraph cpu0 40,477}
${cpugraph cpu1 20,77}${offset 3}\
${cpugraph cpu2 20,77}${offset 3}\
${cpugraph cpu3 20,77}${offset 3}\
${cpugraph cpu4 20,77}${offset 3}\
${cpugraph cpu5 20,77}${offset 3}\
${cpugraph cpu6 20,77}
${cpugraph cpu7 20,77}${offset 3}\
${cpugraph cpu8 20,77}${offset 3}\
${cpugraph cpu9 20,77}${offset 3}\
${cpugraph cpu10 20,77}${offset 3}\
${cpugraph cpu11 20,77}${offset 3}\
${cpugraph cpu12 20,77}

M E M O R Y ${hr 1}
${memgraph 40,477}

D I S K   ( R / W ) ${hr 1}
${diskiograph_read /dev/sdb 20,237}${offset 3}\
${diskiograph_write /dev/sdb 20,237}

N E T W O R K   ( U / D ) ${hr 1}
${upspeedgraph eth0 20,237}${offset 3}\
${downspeedgraph eth0 20,237}

W E A T H E R ${hr 1}
${execi 60 curl -s http://weather.noaa.gov/pub/data/observations/metar/stations/KCLL.TXT | tail -n +2 | fold -s}

${execi 3600 curl -s http://weather.noaa.gov/pub/data/forecasts/taf/stations/KCLL.TXT | tail -n +2 | fold -s}
