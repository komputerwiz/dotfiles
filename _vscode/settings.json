    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.rebaseWhenSync": true,
    "git.suggestSmartCommit": false,
    "php.suggest.basic": false,
    "php.validate.run": "onType",
