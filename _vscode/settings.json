{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorBlinking": "phase",
    // "editor.cursorSmoothCaretAnimation": true,  // only if power/GPU can handle it
    "editor.cursorSurroundingLines": 1,
    "editor.find.autoFindInSelection": "multiline",
    "editor.fontFamily": "'Fira Code', 'Ubuntu Mono', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.fontSize": 11,
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 92, 100, 120],
    // "editor.smoothScrolling": true,  // only if power/GPU can handle it
    "editor.snippetSuggestions": "top",
    "editor.tabSize": 2, // set here as a default; prefer editorconfig
    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true, // set here as a default; prefer editorconfig
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true, // set here as a default; prefer editorconfig
    "git.allowForcePush": true,
    "git.autofetch": "all",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.rebaseWhenSync": true,
    "git.suggestSmartCommit": false,
    "search.smartCase": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "terminal.integrated.allowChords": false,
    "terminal.integrated.defaultProfile.linux": "fish",
    "window.autoDetectColorScheme": true,
    "window.dialogStyle": "custom",
    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "custom",
    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.untitled.hint": "hidden",
    "workbench.enableExperiments": false,
    "workbench.preferredDarkColorTheme": "Solarized Dark",
    "workbench.preferredLightColorTheme": "Solarized Light",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tips.enabled": false,
    "window.zoomLevel": 0,

    // extension-specific configuration
    "gitProjectManager.baseProjectsFolders": [ "/home/citd.tamu.edu/matthew.barry/git/" ],
    "C_Cpp.intelliSenseEngine": "Default",
    "C_Cpp.suggestSnippets": false,
    // "vim.enableNeovim": true,
    // "vim.neovimPath": "/path/to/nvim",
    "vsicons.projectDetection.autoReload": true,
}
