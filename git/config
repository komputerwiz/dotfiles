[alias]
	a = add
	aa = add --all
	b = branch
	bd = branch --delete
	bl = blame -b -w -C -C -C
	bs = bisect
	bsb = bisect bad
	bsg = bisect good
	bsr = bisect reset
	bss = bisect start
	c = commit -v
	ca = commit -v --amend
	can = commit -v --amend --no-edit
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	d = diff
	dc = diff --cached
	dt = difftool
	f = fetch
	fa = fetch --all --prune --jobs=10
	g = log --all --decorate --pretty=oneline-detailed --graph --date=iso
	gc-all = -c gc.reflogExpire=0 -c gc.reflogExpireUnreachable=0 -c gc.rerereresolved=0 -c gc.rerereunresolved=0 -c gc.pruneExpire=now gc
	l = pull
	ls = log --stat
	lsp = log --stat -p
	m = merge
	ma = merge --abort
	mc = merge --continue
	p = push
	pf = push --force-with-lease
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive
	rbs = rebase -skip
	rmc = rm --cached
	rs = restore --staged
	s = status
	sta = stash push
	std = stash drop
	stl = stash list
	stp = stash pop
	sts = stash show --text
	sw = switch
	swc = switch --create
	y = apply
	yr = apply --reverse
[branch]
	sort = -committerdate
[column]
	ui = auto
[core]
	excludesfile = ~/.config/git/ignore
	fsmonitor = true
	untrackedcache = true
[credential]
	helper = cache --timeout=3600
[diff]
	tool = vimdiff
[fetch]
	prune = true
	writeCommitGraph = true
[github]
	user = komputerwiz
	
[include]
	path = ~/.config/git/config.sec
[init]
	defaultBranch = master
[merge]
	tool = vimdiff
	ff = false
[pretty]
	oneline-detailed = format:%Cgreen%h %Creset[%ad] %Cred%an <%ae> %Cblue%d %Creset%s
[push]
	default = simple
[pull]
	rebase = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	enabled = true
[user]
	name = Matthew Barry
	email = {{email}}

