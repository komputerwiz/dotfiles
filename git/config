[alias]
	a = add
	aa = add --all
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	d = diff
	dc = diff --cached
	dt = difftool
	f = fetch
	gc-all = -c gc.reflogExpire=0 -c gc.reflogExpireUnreachable=0 -c gc.rerereresolved=0 -c gc.rerereunresolved=0 -c gc.pruneExpire=now gc
	l = log --pretty=oneline-detailed --graph --all --decorate --date=iso
	rb = rebase
	sm = submodule
	st = status
