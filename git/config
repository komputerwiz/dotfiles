[alias]
	a = add
	aa = add --all
	c = commit
	cp = cherry-pick
	d = diff
	dc = diff --cached
	dt = difftool
	f = fetch
	g = log --all --decorate --pretty=oneline-detailed --graph --date=iso
	gc-all = -c gc.reflogExpire=0 -c gc.reflogExpireUnreachable=0 -c gc.rerereresolved=0 -c gc.rerereunresolved=0 -c gc.pruneExpire=now gc
	l = pull
	m = merge
	mc = merge --continue
	ma = merge --abort
	p = push
	pf = push --force-with-lease
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	s = status
	sm = submodule
	sw = switch
	swc = switch --create
[branch]
	sort = -committerdate
[column]
	ui = auto
[core]
	excludesfile = ~/.config/git/ignore
	fsmonitor = true
	untrackedcache = true
[credential]
	helper = cache --timeout=3600
[diff]
	tool = vimdiff
[fetch]
	prune = true
	writeCommitGraph = true
[github]
	user = komputerwiz
	
[include]
	path = ~/.config/git/config.sec
[init]
	defaultBranch = master
[merge]
	tool = vimdiff
	ff = false
[pretty]
	oneline-detailed = format:%Cgreen%h %Creset[%ad] %Cred%an <%ae> %Cblue%d %Creset%s
[push]
	default = simple
[pull]
	rebase = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true
[rerere]
	enabled = true
